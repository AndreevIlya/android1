<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="weather_fields" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="title" parent="@style/weather_fields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="weather_table" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="image_wrap" parent="@style/Theme.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="images" parent="@style/Theme.AppCompat">
        <item name="android:gravity">start</item>
        <item name="android:scaleType">matrix</item>
    </style>

</resources>
